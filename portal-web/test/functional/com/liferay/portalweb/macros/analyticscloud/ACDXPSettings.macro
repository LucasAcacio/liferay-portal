definition {

    macro goToInstanceSettingsAC{

   		ApplicationsMenu.gotoPortlet(
			category = "Configuration",
			panel = "Control Panel",
			portlet = "Instance Settings");

		Click(locator1 = "ACDXPSettings#ANALYTICS_CLOUD_DXP_OPTION");
    }

    macro navToAnalyticsCloudConnectionMenu {

        Click(locator1 = "//*[contains(@class, 'nav-link') and contains(@href,'connection')]");

    }

    macro navToSyncedSitesMenu {

        Click(locator1 = "//*[contains(@class, 'nav-link') and contains(@href,'synced-sites')]");

    }

    macro navToSyncedContactDataMenu {

        Click(locator1 = "//*[contains(@class, 'nav-link') and contains(@href,'contact')]");

    }
        
    macro connectDXPtoAnalyticsCloud {

        ACDXPSettings.goToInstanceSettingsAC();

		Click(locator1 = "ACDXPSettings#TOKEN_INPUT_FIELD");

		Paste(locator1 = "ACDXPSettings#TOKEN_INPUT_FIELD");

		Click(locator1 = "ACDXPSettings#CONNECT_WITH_TOKEN_BUTTON");

		Click(locator1 = "//*[contains(@class, 'nav-link') and contains(@href,'synced-sites')]");

		Click(locator1 = "//*[contains(@href,'synced-sites') and contains(@class,'btn-primary')]");
		
		Click(locator1 = "//*[contains(@type, 'checkbox')]");

		Click(locator1 = "//*[contains(@class, 'btn-primary') and contains(@id,'add')]");

	}

}