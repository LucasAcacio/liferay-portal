@component-name = "portal-analytics-cloud"
definition {

	property analytics.cloud.enabled = "true";
	property minimum.slave.ram = "32";
	property portal.release = "false";
	property portal.upstream = "true";
	property testray.main.component.name = "Analytics Cloud";

	setUp {
		ACUtils.launchAC();

		ACSettings.takeTokenFromAnalyticsCloud();

		TestCase.setUpPortalInstance();

		ACUtils.launchDXP();
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		ACUtils.tearDownDXP();

		if ("${testPortalInstance}" == "true") {
			PortalInstances.tearDownCP();
		}

		ACUtils.tearDownAC();
	}

	@description = "Feature ID: LRAC-6637 | Automation ID: LRAC-8309 | Test Summary: Private IPs reported as Local Network"
	@ignore = "true"
	@priority = "4"
	test CanprivateIpsReportedAsLocalNetwork {

		// TODO LRAC-8309 CanprivateIpsReportedAsLocalNetwork

	}

	@description = "Feature ID: Legacy | Automation ID: LRAC-8308 | Test Summary: Top 5 locations by session"
	@priority = "3"
	test LocationsBySession {
		property portal.upstream = "quarantine";

		// AC Refactor: Location data issues happen in this ticket
		// AC Refactor ticket: LRAC-8748

		task ("Add page and connect to AC") {
			ACUtils.addSiteAndPage();

			var propertyName = ACDXPSettings.connectDXPtoAnalyticsCloud(siteName = "Site Name");
		}

		task ("Visit the page using 5 diferent locations") {

			//A macro to visit the page using diferent locations are missing :(

			// Create a location list so you can use it later ;)

			Navigator.gotoSitePage(
				pageName = "AC Page",
				siteName = "Site Name");
		}

		task ("Close session") {
			ACUtils.closeAllSessions();

			Pause(locator1 = "30000");
		}

		task ("Launch AC") {
			ACUtils.launchAC();

			ACProperties.switchProperty(propertyName = "${propertyName}");
		}

		task ("Assert locations appear propperly in the card") {

			// Assert the entries using the locations list declared before

			ACSites.viewGeomapAnalyticsLocationNames(locationList = "${locationList}");
		}
	}

}